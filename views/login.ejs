<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Login</title>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:slnt,wght@-10..0,100..900&display=swap" rel="stylesheet">

        <!-- Icon Font Stylesheet -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

        <!-- Boostrap -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">

        <!-- CSS Custom -->
        <link href="/css/style.css" rel="stylesheet">

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <!-- Navbar & Hero Start -->
        <div class="container-fluid nav-bar px-0 px-lg-4 py-lg-0">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light"> 
                    <a href="/" class="navbar-brand p-0">
                        <h1 class="text-primary mb-0"><i class="fab fa-slack me-2"></i> Citiprest</h1>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class=" d-flex justify-content-start navbar-nav mx-0 mx-lg-auto">
                            <a href="/" class="nav-item nav-link active">Inicio</a>
                            <a href="/simularPrestamo" class="nav-item nav-link ">Simula tu préstamo</a>
                            <a href="/contactanos" class="nav-item nav-link">Contáctanos</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar & Hero End -->

        <!-- Login Form Start -->
        <div class="container py-5 d-flex justify-content-center mb-5">
            <div class="shadow row p-5 d-flex align-items-center justify-content-center">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                    class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form action="/auth/login" method="POST">
                        <% if (error) { %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% } %>
                    
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label" for="email">Correo Electrónico</label>
                            <input type="email" name="email" class="form-control form-control-lg" required />
                        </div>
                    
                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label" for="password">Contraseña</label>
                            <input type="password" name="password" class="form-control form-control-lg" required />
                        </div>
                    
                        <!-- Submit button -->
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Login Form End -->
        <!-- Modal de Cambio de Cuenta -->
        <% if (userAuthenticated) { %>
        <div class="modal fade" id="sessionModal" tabindex="-1" role="dialog" aria-labelledby="sessionModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="sessionModalLabel">Ya has iniciado sesión</h5>
                    </div>
                    <div class="modal-body">
                        ¿Te gustaría cambiar de cuenta?
                    </div>
                    <div class="modal-footer">
                        <a href="/auth/logout" class="btn btn-warning">Cambiar de cuenta</a>
                        <% if (userRole === 'admin') { %>
                            <a href="/admin/dashboard" class="btn btn-primary">Volver al dashboard</a>
                        <% } else if (userRole === 'user') { %>
                            <a href="/user/dashboard" class="btn btn-primary">Volver al dashboard</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Footer Start -->
        <div class="container-fluid footer py-5 fadeIn">
            <div class="container py-5">
                <div class="row g-5 d-flex justify-content-center">
                    <div class="col-xl-9">
                        <div class="mb-5">
                            <div class="row g-4 d-flex justify-content-center">
                                <div class="col-md-6 col-lg-6 col-xl-5">
                                    <div class="footer-item">
                                        <a href="index.html" class="p-0">
                                            <h3 class="text-white"><i class="fab fa-slack me-3"></i> Citiprest</h3>
                                            <!-- <img src="/img/logo.png" alt="Logo"> -->
                                        </a>
